@model IEnumerable<Musical.Web.Models.Genre>

@{
    ViewBag.Title = "Genero";
}


<p class="mt-3">
    @if (User.IsInRole("Administrator"))
    {
        <a href="#" data-toggle="modal" data-target="#AddModal" class="btn btn-sm bg-principal text-white"><i class="fas fa-plus"></i> Genero</a>
    }
</p>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-principal py-1">
                <h6 class="text-white">Lista de Generos</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Genres", new { id = item.Id })" title="Editar" class="btn btn-sm btn-warning rounded"><i class="far fa-edit text-white"></i></a>
                                <a href="@Url.Action("Details", "Genres", new { id = item.Id })" title="Ver" class="btn btn-sm btn-info rounded"><i class="fas fa-eye text-white"></i></a>
                                <a href="@Url.Action("DeleteConfirmed","Genres",new { id=item.Id})" title="Eliminar" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-principal">
                <h5 class="modal-title text-white" id="exampleModalLabel">Agregar Nuevo Genero</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Create","Genres")" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-6 col-form-label">
                            Genero
                        </label>
                        <div class="col-md-10">
                            <input type="text" value="" name="Name" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-danger btn-sm">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>